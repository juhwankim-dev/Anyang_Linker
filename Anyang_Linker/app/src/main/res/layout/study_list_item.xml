<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:card_view="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="7dp"
        android:background="@drawable/spinner_background">

        <!-- 좌측 여백을 위해 의미없이 넣어준 리니어 레이아웃 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_titleOfRoomList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:text="C++ 스터디 모집"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_subjectOfRoomList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="인공지능"
                    android:gravity="center|top"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="|"
                    android:gravity="center|top"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/txt_gradeOfRoomList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="3학년"
                    android:gravity="center|top"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="|"
                    android:gravity="center|top"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/txt_maxPeopleOfRoomList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="정원 5명"
                    android:gravity="center|top"
                    android:padding="5dp"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_profileOfRoomList"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/ic_launcher_background"
            />

        <!-- 우측 여백을 위해 의미없이 넣어준 리니어 레이아웃 -->

    </LinearLayout>

</androidx.cardview.widget.CardView>

