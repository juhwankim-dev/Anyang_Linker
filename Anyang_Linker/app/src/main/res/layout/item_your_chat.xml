<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="7dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat_You_Image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="7dp">

            <TextView
                android:id="@+id/chat_You_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="김주환"
                android:textColor="#000000"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/chat_You_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상대가 입력한 내용"
                    android:gravity="center"
                    android:padding="10dp"
                    android:background="@drawable/border_yellow_fill_round"
                    android:backgroundTint="#f2f1ed"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/chat_You_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="오후 9:30"
                    android:layout_marginLeft="5dp"
                    android:textSize="11dp"
                    android:gravity="bottom"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
